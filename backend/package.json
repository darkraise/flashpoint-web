{
  "name": "flashpoint-web-backend",
  "version": "1.0.0",
  "description": "Backend API for Flashpoint Archive web application",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:all": "concurrently \"npm run dev\" \"cd ../frontend && npm run dev\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "kill-port": "node scripts/kill-port.js",
    "build": "tsc",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest",
    "fix-paths": "tsx scripts/fix-absolute-paths.ts"
  },
  "keywords": [
    "flashpoint",
    "archive",
    "games",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/cheerio": "^0.22.35",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.6.0",
    "cheerio": "^1.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "jsonwebtoken": "^9.0.3",
    "node-stream-zip": "^1.15.0",
    "redis": "^4.6.13",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^20.11.25",
    "@types/sql.js": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
