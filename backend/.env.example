# Backend Environment Template
# Copy to .env and fill in required values.

# Required
FLASHPOINT_HOST_PATH=/path/to/Flashpoint
JWT_SECRET=replace-with-a-secure-random-string

# Server
NODE_ENV=production
HOST=0.0.0.0
PORT=3100
TZ=UTC

# Backend -> game-service connection (NEW)
GAME_SERVICE_HOST=localhost
GAME_SERVICE_PROXY_PORT=22500
GAME_SERVICE_GAMEZIP_PORT=22501

# External services
EXTERNAL_IMAGE_URLS=https://infinity.flashpointarchive.org/Flashpoint/Data/Images,https://infinity.unstable.life/Flashpoint/Data/Images
DOMAIN=http://localhost:80

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/backend.log

# User DB
USER_DB_PATH=/app/data/user.db

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Auth
JWT_EXPIRES_IN=1h
BCRYPT_SALT_ROUNDS=10

# Misc
HOME_RECENT_HOURS=24

# Redis (optional)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379