# Flashpoint Web - Environment Template
# Copy to .env and fill in required values.

# ---------------------------------------------------------------------------
# Required
# ---------------------------------------------------------------------------
FLASHPOINT_HOST_PATH=/path/to/Flashpoint
JWT_SECRET=replace-with-a-secure-random-string

# ---------------------------------------------------------------------------
# Ports (host)
# ---------------------------------------------------------------------------
WEB_PORT=80
API_PORT=3100
PROXY_PORT=22500
GAMEZIP_PORT=22501

# ---------------------------------------------------------------------------
# Backend configuration
# ---------------------------------------------------------------------------
NODE_ENV=production
HOST=0.0.0.0
PORT=3100
TZ=UTC
LOG_LEVEL=info
LOG_FILE=/app/logs/backend.log
DOMAIN=http://localhost:80
USER_DB_PATH=/app/data/user.db
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
JWT_EXPIRES_IN=1h
BCRYPT_SALT_ROUNDS=10
HOME_RECENT_HOURS=24
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379

# Backend -> game-service connection
GAME_SERVICE_HOST=game-service
GAME_SERVICE_PROXY_PORT=22500
GAME_SERVICE_GAMEZIP_PORT=22501

# ---------------------------------------------------------------------------
# Frontend (Nginx -> backend)
# ---------------------------------------------------------------------------
BACKEND_HOST=backend
BACKEND_PORT=3100

# ---------------------------------------------------------------------------
# External CDN settings
# ---------------------------------------------------------------------------
EXTERNAL_IMAGE_URLS=https://infinity.flashpointarchive.org/Flashpoint/Data/Images,https://infinity.unstable.life/Flashpoint/Data/Images

# ---------------------------------------------------------------------------
# Game-service options
# ---------------------------------------------------------------------------
EXTERNAL_FALLBACK_URLS=http://infinity.flashpointarchive.org/Flashpoint/Legacy/htdocs,http://infinity.unstable.life/Flashpoint/Legacy/htdocs/
PROXY_CHUNK_SIZE=8192
ENABLE_CGI=false
ENABLE_HTACCESS=false